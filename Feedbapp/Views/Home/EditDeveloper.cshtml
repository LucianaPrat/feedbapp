@model Dominio.Developer

@{
    ViewData["Title"] = "EditDeveloper";
}

<h1>Editar Developer</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDeveloper">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nombre</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Apellido</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Leader.Id">Lideres</label>
                @* TODO
                <select asp-for="Leader.Id" class="form-control" id="exampleSelect">
                    @foreach (Leader d in ViewBag.leaders)
                    {
                        <option value="@d.Id">@d.Name @d.LastName</option>
                    }
                </select> *@
            </div>
            <div class="container mt-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Active">
                    <label class="form-check-label" for="miCheckbox">
                        Activo
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
        <p>@ViewBag.mensaje</p>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
