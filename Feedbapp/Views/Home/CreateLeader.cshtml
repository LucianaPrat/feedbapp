@model Dominio.Leader

@{
    ViewData["Title"] = "CreateLeader";
}

<h1>Crear Lider</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateLeader">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleSelect">Clientes</label>
                <select asp-for="Client.Id" class="form-control" id="exampleSelect">
                    @foreach (Dominio.DTO.ClientDTO c in ViewBag.clients)
                    {
                        <option value="@c.Id">@c.Name</option>
                    }
                </select>
            </div>            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Leaders">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
