@model IEnumerable<Dominio.Deliveries>

<div class="text-center" style="padding-top: 15px; padding-bottom: 10px;">
    <h1 style="color: #333A73; font-weight: bold; font-size: 2.5rem; margin-bottom: 20px;">Envíos</h1>
</div>

@if (Model.Count() == 0)
{
    <p>No deliveries exist</p>
}
else
{
    <div class="table-responsive" style="padding-top: 20px; padding-bottom: 20px;">
        <table class="table-custom">
            <thead>
                <tr>
                    <th>Developer</th>
                    <th>Lider</th>
                    <th>Date</th>
                    <th>Last</th>
                    <th></th>
                </tr>
            </thead>
            @foreach (Dominio.Deliveries d in Model)
            {
                <tbody>
                    <tr>
                        <td>@d.Position.Developer.Name @d.Position.Developer.LastName </td>
                        <td>@d.Position.Developer.Leader.Name @d.Position.Developer.Leader.LastName </td>
                        <td>@d.Date</td>
                        <td></td>                       
                    </tr>
                </tbody>
            }
        </table>
    </div>
}