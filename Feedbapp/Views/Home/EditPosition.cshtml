@model Dominio.Position

@{
    ViewData["Title"] = "EditPosition";
}

<h1>Editar posicion</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPosition">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>                     
            <div class="form-group">
                <label for="Developer.Id">Dev</label>
                <select asp-for="Developer.Id" class="form-control" id="exampleSelect">
                    @foreach (Dominio.Developer d in ViewBag.developers)
                    {
                        <option value="@d.Id">@d.Name @d.LastName</option>
                    }
                </select>
            </div>                        
            <div class="form-group">
                <label asp-for="Recurrence">Recurencia</label>
                <select asp-for="Recurrence" class="form-control" id="exampleSelect">
                    @foreach (Dominio.Recurrence recurrenceOption in Enum.GetValues(typeof(Dominio.Recurrence)))
                    {
                        <option value="@recurrenceOption">@recurrenceOption</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Descripcion</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
