@model Dominio.DTO.PositionDTO

@{
    ViewData["Title"] = "CreatePosition";
}

<h1>Create Positions</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePosition">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>    
            <label for="exampleSelect">Developers</label>
                <select asp-for="Developer.Id" class="form-control" id="exampleSelect">
                    @foreach (Dominio.DTO.DeveloperDTO d in ViewBag.developers)
                    {
                        <option value="@d.Id">@d.Name @d.LastName</option>
                    }
                </select>           
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recurrence">Recurrence</label>
                <select asp-for="Recurrence" class="form-control" id="exampleSelect">
                    @foreach (Dominio.Recurrence recurrenceOption in Enum.GetValues(typeof(Dominio.Recurrence)))
                    {
                        <option value="@recurrenceOption">@recurrenceOption</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Positions">Back to list</a>
            </div>
        </form>
        <p>@ViewBag.message</p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
